
---
import { fetchAirdrops, slugify } from "../../../lib/airdropApi.js";

export async function getStaticPaths() {
  const list = await fetchAirdrops();
  return list.map((a) => {
    const name = a?.Nom || a?.Name || a?.Project || a?.Title || "Unknown";
    return { params: { slug: slugify(name) }, props: { airdrop: a } };
  });
}

const { airdrop } = Astro.props;
